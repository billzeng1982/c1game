<?xml version="1.0" encoding="gbk" standalone="yes" ?>
<!-- This file is for tbus relay application -->

<RelayMnger>

    <!--AddrTemplet: TBUS地址字符串模板,默认值为: 8.8.8.8-->
    <!--DEFAULT VALUE: '8.8.8.8'-->
    <AddrTemplet>8.8.8.8</AddrTemplet>

    <!-- GRM共享内在key -->
    <RelayShmKey>2688</RelayShmKey>

    <Relays>

        <!-- 指定通道中需要中转数据的一端对应的进程地址 -->
        <Addr>0.0.0.1</Addr>

        <!-- Addr所指进程所作物理机器的tbusd通信地址  -->
        <MConn>tcp://10.1.44.61:1027</MConn>

        <Desc>Some description for this relay</Desc>
    </Relays>

    <Relays>
        <Addr>1.0.0.2</Addr>
        <MConn>tcp://10.1.44.61:1027</MConn>

        <Desc>Some description for this relay</Desc>
    </Relays>

</RelayMnger>
