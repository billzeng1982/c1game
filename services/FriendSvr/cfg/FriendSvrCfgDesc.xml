<?xml version="1.0" encoding="GBK" standalone="yes" ?>

<metalib tagsetversion="1" name="FriendSvrCfg" version="1" >
	<struct name="FriendSvrCfg" version="1" desc="主配置结构">
		<entry name="ProcIDStr" 		  type="string" size="20" />
		<entry name="ProcID"			    type="int" defaultvalue="0"/>
		<entry name="BusGCIMKey"		  type="int" />

		<entry name="ZoneSvrIDStr" 	type="string"	size="20" />
		<entry name="ZoneSvrID"		type="int"		defaultvalue="0"/>
		
		<entry name="FriendTableNum"  type="int" />
		<entry name="DBAddr" 		      type="string" size="20" />
		<entry name="DBName" 		      type="string" size="32" />
		<entry name="Port" 			      type="uint16" />
		<entry name="User" 			      type="string" size="32" />
		<entry name="Password" 		    type="string" size="32" />
	
		<entry name="FriendMaxNum" 	  type="uint16" />
	
    <!--mysql ping 的时间间隔-->
    <entry name="PingFreq" type="int" />
	<!--不能同时为0-->
	<entry name="UpdateDirtyNum" 			type="int" defaultvalue="50" desc="多少个脏数据触发回写DB 填0 不启作用" />
	<entry name="UpdateIntervalTime" 		type="int" defaultvalue="3000" desc="间隔多少毫秒回写DB 填0 不启作用" />
	
    <!--多线程配置,线程操作暂不分table进行-->
    <entry name="WorkThreadNum" 	  type="int" defaultvalue="1" desc="工作线程数量"/>
    <entry name="ThreadQBaseShmKey" type="int" defaultvalue="0" />
    <entry name="ThreadQSize" 		  type="uint32" desc="主从线程间通信管道大小" />


    <entry name="RedisAddr" 		    	type="string" size="20" />
    <entry name="RedisPort" 			  	type="uint16" />
	<entry name="RedisWorkThreadNum" 		type="int" defaultvalue="1" desc="工作线程数量"/>
    <entry name="RedisThreadQBaseShmKey" 	type="int" defaultvalue="0" />
    <entry name="RedisThreadQSize" 		  	type="uint32" desc="主从线程间通信管道大小" />
	
	<entry name="SvrID"		type="int"	/>
	</struct>
</metalib>

