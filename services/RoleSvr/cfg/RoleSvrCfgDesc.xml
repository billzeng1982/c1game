<?xml version="1.0" encoding="GBK" standalone="yes" ?>

<metalib tagsetversion="1" name="RoleSvrCfg" version="1" >
	<struct name="RoleSvrCfg" version="1" desc="主配置结构">
		<entry name="ProcIDStr" 	type="string" size="20" />
		<entry name="ProcID"		type="int" defaultvalue="0"/>
		<entry name="ProxySvrIDStr"	type="string" size="20" />
    <entry name="IdipAgentSvrStr"  type="string"   size="20"/>
		<entry name="ProxySvrID"		type="int"	  defaultvalue="0" />
		<entry name="BusGCIMKey"		type="int" />
		<entry name="CreateAccount"	type="char" desc="账号不存在是否创建" defaultvalue="1"/>
   
		<entry name="DBAddr" 	type="string" size="20" />
		<entry name="DBName" 	type="string" size="32" />
		<entry name="Port" 		type="uint16" defaultvalue="3306"/>
		<entry name="User" 		type="string" size="32" />
		<entry name="Password" 	type="string" size="32" />

		<!--mysql ping 的时间间隔-->
		<entry name="PingFreq" type="int" defaultvalue="3600"/>

		<entry name="SvrID"		type="int"	/>
		<!--多线程配置,线程操作暂不分table进行-->
		<entry name="WorkThreadNum" 	type="int" 		defaultvalue="1" desc="工作线程数量"/>
		<entry name="ThreadQBaseShmKey" type="int" 		defaultvalue="0" />
		<entry name="ThreadQSize" 		type="uint32"	desc="主从线程间通信管道大小" />
		<entry name="RoleTableNum"		type="int"		defaultvalue="1" />
	</struct>
</metalib>

