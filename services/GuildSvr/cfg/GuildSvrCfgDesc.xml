<?xml version="1.0" encoding="GBK" standalone="yes" ?>

<metalib tagsetversion="1" name="GuildSvrCfg" version="1" >
	<struct name="GuildSvrCfg" version="1"  desc="主配置结构">
		<entry name="ProcIDStr" 			type="string" size="20" />
		<entry name="ProcID"				type="int" defaultvalue="0"/>
		<entry name="BusGCIMKey"			type="int" />

		<entry name="SvrID"					type="int"		defaultvalue="1"/>
        <entry name="SvrOpenTime"			type="string"	size="64"   		desc="服务器开服时间" />
		<entry name="ZoneSvrIDStr" 			type="string"	size="20" />
		<entry name="ZoneSvrID"				type="int"		defaultvalue="0"/>

		<entry name="MailSvrIDStr" 			type="string" 	size="20" />
		<entry name="MailSvrID"				type="int" 		defaultvalue="0"/>

        <entry name="ClusterGateIDStr" 			type="string" 	size="20" />
        <entry name="ClusterGateID"				type="int" 		defaultvalue="0"/>

        <entry name="RankSvrIDStr" 			type="string" 	size="20" />
        <entry name="RankSvrID"				type="int"      defaultvalue="0"/>

		<entry name="GuildTableNum"  		type="int" />
		<entry name="DBAddr" 		 		type="string" 	size="20" />
		<entry name="DBName" 		 		type="string" 	size="32" />
		<entry name="Port" 			 		type="uint16" />
		<entry name="User" 			 		type="string"	size="32" />
		<entry name="Password" 		 		type="string" 	size="32" />

		<entry name="GuildMaxNum" 			type="int" />
		<entry name="PlayerMaxNum" 			type="int" />

		<entry name="DirtyNodeMax" 			type="int"  defaultvalue="20"    desc="DirtyList中节点数超过此值时,立即回写数据库,无需等待"/>
		<entry name="WriteTimeVal" 			type="int"  defaultvalue="60"  desc="脏数据回写数据库的时间间隔,单位:毫秒"/>

		<entry name="RefreshTimeVal" 		type="int"  desc="单位:毫秒" />
		<entry name="PingFreq" 				type="int"  desc="单位:秒" />

		<entry name="FileName" 		 		type="string"  size="40"  desc="军团战进度保存的文件"/>
		<entry name="GFightUptVal" 			type="int"  			  desc="军团战一帧的时间。 单位:毫秒" />

        <entry name="FileNameGuildBoss" type="string" size="40" desc="军团boss开服时间保存的文件"/>

		<!--多线程配置,线程操作暂不分table进行-->
		<entry name="WorkThreadNum" 		type="int" 		defaultvalue="3"  desc="工作线程数量"/>
		<entry name="ThreadQBaseShmKey" 	type="int" 		defaultvalue="0" />
		<entry name="ThreadQSize" 			type="uint32"	desc="主从线程间通信管道大小" />

		<entry name="CheckInterval" 		type="int"		defaultvalue="15"  	desc="单位:秒"/>
		<entry name="URLRoot" 				type="string"   size="128"   		desc="上传/下载录像文件的根URL"/>
		<entry name="RootDir" 				type="string"	size="128"  		desc="存放录像文件的根目录"/>

		<entry name="GFightSwitch" 			type="int"		defaultvalue="1"    desc="军团战开关"/>
	</struct>
</metalib>
