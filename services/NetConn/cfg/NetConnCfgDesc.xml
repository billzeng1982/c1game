<?xml version="1.0" encoding="GBK" standalone="yes" ?>
<metalib tagsetversion="1" name="NetConnCfg" version="1" >
	<!--TCP config -->
	<struct name="TcpConfig" version="1" desc="TCP连接配置">
    	<entry name="IsEncrypt"				type="int"		defaultvalue="0"/>
		<entry name="TCPSwitch" 			type="int" 		defaultvalue="0"/>
		<entry name="MaxFD" 				type="int" 		defaultvalue="0"/>
		<entry name="TcpListenPort" 		type="uint16"	defaultvalue="0"/>
		<entry name="SendBuff" 				type="int" 		defaultvalue="0"/>
		<entry name="RecvBuff" 				type="int"		defaultvalue="0"/>
		<entry name="MaxIdle" 				type="uint16" 	defaultvalue="0" 	desc="空闲关闭时间(秒),零表示不关闭" />
		<entry name="TcpBackLog" 			type="uint16" 	defaultvalue="128" />
	</struct>

	<!--UDP config -->
	<struct name="UdpConfig" version="1" desc="UDP连接配置">
		<entry name="UDPSwitch" 			type="int" 		defaultvalue="0"/>
		<entry name="UdpBindPort" 			type="uint16" 	defaultvalue="0"/>
		<entry name="MaxFD" 				type="int" 		defaultvalue="0"/>
		<entry name="QuickResendSwitch" 	type="int"  	defaultvalue="1" desc="快速重传开关"/>
		<entry name="MaxIdle" 				type="uint16" 	defaultvalue="0" desc="空闲关闭时间(秒),零表示不关闭" />

		<entry name="UdpPortRangeBegin"		type="uint16"	defaultvalue="40000" />
		<entry name="UdpPortRangeEnd"		type="uint16"	defaultvalue="41999" />
		<entry name="UdpAckRspNum"			type="uint32"	defaultvalue="5" />
		<entry name="UdpAckRspMs"			type="uint32"	defaultvalue="60" />
		<entry name="MaxResendTimes"		type="int"		defaultvalue="10" />
		<entry name="MinResendInterval"   	type="int"		defaultvalue="300" />
		<entry name="MaxResendInterval"   	type="int"		defaultvalue="1000" />
		<entry name="QuickResendTriggerTimes" type="int" 	defaultvalue="3"	 desc="收到几次重复的PeerCurRecvedSeq后触发快速重传"/>
		<entry name="UdpRecvTimeoutMs"		type="int"		defaultvalue="10000" 	desc="缓存的udp乱序包的超时时间"/>

		<entry name="UdpListenRecvBuffSize"		type="uint32"	defaultvalue="65536" 	desc="Accept参数" />
		<entry name="UdpListenSendBuffSize"		type="uint32"	defaultvalue="65536" 	desc="Accept参数" />
		<entry name="UdpClientRecvBuffSize"		type="uint32"	defaultvalue="32768" 	desc="Client参数" />
		<entry name="UdpClientSendBuffSize"		type="uint32"	defaultvalue="32768" 	desc="Client参数" />
	</struct>

	<!--ConnectSvr Info -->
	<struct name="ConnSvrInfo" version="1" desc="与其他进程通信信息">
		<entry name="LogicSvrIDStr" 		type="string" size="20" />
		<entry name="LogicSvrID"			type="int" defaultvalue="0" />
	</struct>

	<struct name="NetConnCfg" version="1" desc="主配置结构">
		<entry name="AppNameStr" 			type="string" size="20" />
		<entry name="ProcIDStr" 			type="string" size="20" />
		<entry name="ProcID"				type="int" defaultvalue="0" />
		<entry name="BusGCIMKey" 			type="int" />
		<entry name="ShmKey"				type="int" />
		<entry name="ConnLimitPerSec" 		type="int" 	defaultvalue="0" 	desc="每秒链接限制, 0表示不限制"/>
		<entry name="RecvPkgLimitPerSec"  	type="int" 						desc="每秒包限制" />
		<entry name="ListenIP" 				type="string" 					size="20" />

		<entry name="TcpConfig"				type="TcpConfig"/>
		<entry name="UdpConfig"				type="UdpConfig"/>
		<entry name="ConnSvrInfo"			type="ConnSvrInfo"/>
	</struct>
</metalib>

