<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<metalib tagsetversion="1" name="DWLOG" version="1" >

<include file="dwlog_def.xml"/>

<!-- 
	统计指标描述，用于生成查询表的建表语句
-->

<struct name="LevelFirstPass" version="1" desc="关卡首次通关统计, 每日一次">
	<entry name="DateTime" 	type="string"  size="MAX_TIMEINFO_LENGTH"/>
	<entry name="LevelID" 	type="uint32"  desc="关卡ID"/>
	<entry name="AvgTime2AccRegister" 	type="uint32"  	desc="平均首次通关时间(取玩家首次通关时间与账号注册时间的差值，做平均)"/>
	<entry name="AvgStarEvalResult" 	type="float" 	desc="平均首次通关评星数"/>
	<entry name="AvgPlayerLevel" 		type="float" 	desc="关卡首次通关时玩家平均等级"/>
	<entry name="AvgTimeCost" 			type="uint32" 	desc="平均关卡首次通关花费时间"/>
	<index name="LevelID_index" 	column="LevelID"/>
	<index name="DateTime_index"    column="DateTime"/>
</struct>

<struct name="LevelPassCnt" version="1" desc="关卡累计通关次数">
	<entry name="DateTime" 	type="string"  size="MAX_TIMEINFO_LENGTH"/>
	<entry name="LevelID" 	type="uint32"  desc="关卡ID"/>
	<entry name="PassCnt" 	type="uint32"  desc="通关次数"/>
	<index name="LevelID_index" 	column="LevelID"/>
	<index name="DateTime_index" 	column="DateTime"/>
</struct>

<struct name="LevelSweepCnt" version="1" desc="关卡累计扫荡次数">
	<entry name="DateTime" 	type="string"  size="MAX_TIMEINFO_LENGTH"/>
	<entry name="LevelID" 	type="uint32"  desc="关卡ID"/>
	<entry name="SweepCnt" 	type="uint32"  desc="扫荡次数"/>
	<index name="LevelID_index" 	column="LevelID"/>
	<index name="DateTime_index"    column="DateTime"/>
</struct>

</metalib>
