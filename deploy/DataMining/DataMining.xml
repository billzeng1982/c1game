<?xml version="1.0" encoding="UTF-8"?>
<DataMiningConfig>
	<globleconfig>
		<Database name="QueryDB"             host="127.0.0.1"  port="3306" username="root" password="123456"/>
		<Database name="DataWarehouse"       host="127.0.0.1"  port="3306" username="root" password="123456"/>
	</globleconfig>

	<statistics dimension="CltFightStats" DWdb="DWLog">
		<StatsNode name="WinRate"    	    scriptpath="winrate"     		 desc="胜率"/>
		<StatsNode name="AppearRate" 	    scriptpath="appearrate" 		 desc="出场率"/>
		<StatsNode name="AvgDeath"   	    scriptpath="avgdeath"    		 desc="场均死亡"/>
	</statistics>

	<statistics dimension="PVEStats" DWdb="DWLog">
		<StatsNode name="LevelPassCnt" 		scriptpath="levelpasscnt"  		 desc="关卡累计通关次数"/>
		<StatsNode name="LevelSweepCnt"     scriptpath="levelsweepcnt"   	 desc="关卡累计扫荡次数"/>
	</statistics>
	
	<statistics dimension="PlayerDataStats" DWdb="DWLog">
		<StatsNode name="AwardRate"    scriptpath="awardrate"      desc="本日某福利系统领取率"/>
		<StatsNode name="DiamandCost"  scriptpath="diamandcost"    desc="钻石流水统计"/>
		<StatsNode name="GeneralCnt"   scriptpath="generalcnt"     desc="武将培养平均操作次数"/>
		<StatsNode name="GoldCost"     scriptpath="goldcost"   	   desc="金币流水统计"/>
		<StatsNode name="PlayerReg"    scriptpath="playerreg"      desc="玩家注册每日统计"/>
		<StatsNode name="MSKillCnt"    scriptpath="mskillcnt"      desc="秘策培养平均操作次数"/>
	</statistics>

	<tasklist>
		<task name="AppearRate"  		timeval="day"	run="1"/>
		<task name="WinRate"     		timeval="day"	run="1"/>
		<task name="AvgDeath"    		timeval="day"	run="1"/>
		<task name="LevelFirstPass" 	timeval="day"	run="0"/>
		<task name="LevelPassCnt"     	timeval="day"	run="1"/>
		<task name="LevelSweepCnt"    	timeval="day"	run="1"/>
		<task name="AwardRate"    	    timeval="day"	run="1"/>
		<task name="DiamandCost"    	timeval="day"	run="1"/>
		<task name="GeneralCnt"    	    timeval="day"	run="1"/>
		<task name="GoldCost"    	    timeval="day"	run="1"/>
		<task name="PlayerReg"    	    timeval="day"	run="1"/>
		<task name="MSKillCnt"    	    timeval="day"	run="1"/>
	</tasklist>

</DataMiningConfig>